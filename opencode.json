{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": ["php", "artisan", "boost:mcp"]
        },
        "shadcn": {
            "type": "local",
            "enabled": true,
            "command": ["npx", "shadcn@latest", "mcp"]
        },
        "laravel-inertia": {
            "type": "remote",
            "enabled": true,
            "url": "https://inertiajs.com/docs/mcp"
        }
    }
}
